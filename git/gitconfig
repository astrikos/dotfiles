	email = astrikos@github.com
[github]
	user = astrikos
[difftool "icdiff"]
	cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[push]
	default = simple
[pull]
        rebase = true
[alias]
        pl = pull --rebase
        dfm = diff master -- .
[init]
	defaultBranch = main
